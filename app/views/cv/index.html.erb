<div class="col-md-5">
	<h2 id='toggleExperiences'><span id='experienceButton'></span>Expériences </h2>
	<div id='experiences'>
<% @experiences.each do |experience| %>
		<div class="experience">
			<h3 class="title"><%= experience.title %></h3>
			<p class="place"><%= experience.date.year %><% if not (experience.date.nil? ||  experience.place.nil?) %> - <% end %><%= experience.place %></p>
			<p class="notes"><%= experience.notes %></p>
			<% if experience.tags.size > 0 %><p class='tags'><% experience.tags.each do |t| %><%= t.label + " " %><% end %></p><% end %>
		</div>
<% end %>
	</div>
</div>

<div class="col-md-4">
	<h2 id='toggleTrainings'><span id='trainingButton'></span>Scolarité</h2>
	<div id='trainings'><% @trainings.each do |training| %>
		<h3><%= training.start_date.year %><% if not training.end_date.nil? %> → <%= training.end_date.year %><% end %> - <%= training.title %></h3>
		<p class="place"><%= training.place %></p><% end %>
	</div>
</div>
